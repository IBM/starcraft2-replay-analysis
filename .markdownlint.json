{
    "_docs_for_this_file": "https://github.com/DavidAnson/markdownlint/blob/master/doc/Rules.md",
    "line-length": false,
    "first-line-h1": true,
    "first-header-h1": {
        "level": 1
    },
    "header-style": {
        "style": "atx"
    },
    "ul-style": {
        "style": "asterisk"
    },
    "hr-style": {
        "style": "---"
    },
    "fenced-code-language": true,
    "required-headers": {
        "headers": [
            "*",
            "## Flow",
            "## Included components",
            "## Featured technologies",
            "## Watch the Video",
            "## Steps",
            "*",
            "## Troubleshooting",
            "## License"
        ]
    },
    "spelling": false,
    "no-alt-text": true,
    "no-blanks-blockquote": false,
    "html": {
        "allowed_elements": [
            "kbd"
        ]
    }
}
